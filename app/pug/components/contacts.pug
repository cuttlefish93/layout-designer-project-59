section#contacts.contacts.tab-pane.px-4.py-5(role="tabpanel", aria-labelledby="pills-contacts-tab")
  h2.contacts-title.title-1 Контакты
  form(action="#")
    input.form-control.search-input.bg-white(type="text", placeholder="Поиск по контактам")
  ul.contacts-list.list-unstyled.pb-5
    each users, char in contacts
      li.contacts-list-item.pt-5
        p.contacts-list-char= char
        each user in users
          a.contact.px-3.py-4.text-decoration-none.d-flex.align-items-center.column-gap-4.shadow-sm(href='#')
            img.contact-avatar.avatar-sm(src=user.avatar)
            div.contact-info
              p.contact-name.title-2= user.name
              p.contact-status.title-3= user.status

